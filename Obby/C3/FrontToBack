-- Moving Block (Front ↔ Back)
-- Moves smoothly 10 studs back (+Z), then back to center, then 10 studs front (−Z), and repeats.

local part = script.Parent
local tweenService = game:GetService("TweenService")

local startPos = part.Position
local backPos = startPos + Vector3.new(0, 0, 25)  -- back = +Z
local frontPos = startPos + Vector3.new(0, 0, -25) -- front = -Z
local tweenInfo = TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut)

while true do
	-- Move back
	local tween1 = tweenService:Create(part, tweenInfo, {Position = backPos})
	tween1:Play()
	tween1.Completed:Wait()

	-- Return to center
	local tween2 = tweenService:Create(part, tweenInfo, {Position = startPos})
	tween2:Play()
	tween2.Completed:Wait()

	-- Move front
	local tween3 = tweenService:Create(part, tweenInfo, {Position = frontPos})
	tween3:Play()
	tween3.Completed:Wait()

	-- Return to center again
	local tween4 = tweenService:Create(part, tweenInfo, {Position = startPos})
	tween4:Play()
	tween4.Completed:Wait()
end
